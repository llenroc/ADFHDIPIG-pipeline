{
  "$schema": "http://datafactories.schema.management.azure.com/schemas/2015-09-01/Microsoft.DataFactory.Table.json",
  "name": "FtpInput",
  "properties": {
    "external":  true,
    "type": "FileShare",
    "linkedServiceName": "FTP",
    "typeProperties": {
      "folderPath": "input/input-{date}{time}",
      "partitionedBy": [
        {
          "name": "date",
          "value": {
            "type": "DateTime",
            "date": "SliceEnd",
            "format": "yyyyMMdd"
          }
        },
        {
          "name": "time",
          "value": {
            "type": "DateTime",
            "date": "SliceEnd",
            "format": "HHmm"
          }
        }
      ],
      "useBinaryTransfer": true
    },
    "availability": {
      "frequency": "Minute",
      "interval": 30
    }
  }
}