{
  "$schema": "http://datafactories.schema.management.azure.com/schemas/2015-09-01/Microsoft.DataFactory.Table.json",
  "name": "FilesOnFTP",
  "properties": {
    "external":  true,
    "type": "FileShare",
    "linkedServiceName": "FTP",
    "typeProperties": {
      "fileName": "input-{date}T{time}.csv",
      "folderPath": "files",
      "partitionedBy": [
        {
          "name": "date",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "yyMMdd"
          }
        },
        {
          "name": "time",
          "value": {
            "type": "DateTime",
            "date": "SliceStart",
            "format": "hhmm"
          }
        }
      ],
      "useBinaryTransfer": true
    },
    "availability": {
      "frequency": "Minute",
      "interval": 30
    }
  }
}