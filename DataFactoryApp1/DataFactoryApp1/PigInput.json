{
  "$schema": "http://datafactories.schema.management.azure.com/schemas/2015-09-01/Microsoft.DataFactory.Table.json",
  "name": "PigInput",
  "properties": {
    "type": "AzureBlob",
    "linkedServiceName": "EncryptedStorage",
    "typeProperties": {
      "folderPath": "input/user/plasne/input-{date}{time}",
      "partitionedBy": [
        {
          "name": "date",
          "value": {
            "type": "DateTime",
            "date": "SliceEnd",
            "format": "yyyyMMdd"
          }
        },
        {
          "name": "time",
          "value": {
            "type": "DateTime",
            "date": "SliceEnd",
            "format": "hhmm"
          }
        }
      ]
    },
    "availability": {
      "frequency": "Minute",
      "interval": 30
    }
  }
}